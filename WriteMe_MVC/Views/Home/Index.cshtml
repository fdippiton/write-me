@model List<WriteMe_MVC.ViewModels.PostViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<div class="" style="">
    <div style="height: 10px; background-color:#095c30; width: 100%"></div>
    
    <div class="row d-flex justify-content-evenly" style=" margin-bottom: 60px;
    background-image: url('/assets/writing_green.png') !important;
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-size: cover; width: 99.7vw">
    
        <div class="col-10">
            <h6 class=" text-white text-start " style="font-family: 'Noto Serif Balinese', serif; font-size: 70px; margin-top: 150px; ">Escribe, lee e inspira.  </h6>
            <h6 class=" text-white text-start " style="font-family: 'Noto Serif Balinese', serif; font-size: 20px; margin-bottom: 250px;">Cambia el mundo con cada palabra.</h6>
        </div>

    </div>
    <div class="container mb-5" style=" ">
       
    @functions {
        string Truncate(string value, int length)
        {
            if (value.Length <= length)
            {
                return value;
            }
            else
            {
                return value.Substring(0, length) + " ...";
            }
        }
    }

        @if (Model != null)
        {
            <div class="row pb-5">
                <h2 class="mb-5 fs-3 text-center" style="">Articulos</h2>
            @foreach (var post in Model)
            {
                    <div class="col-4 mb-3" >
                        <a href="@Url.Action("PostDetails", "Posts", new { id = post.PostId })" class="text-decoration-none text-black" style="display: block; position: relative;">
                            <div class="card mb-2 " style="box-shadow: rgba(0, 0, 0, 0.07) 0px 1px 2px, rgba(0, 0, 0, 0.07) 0px 2px 4px, rgba(0, 0, 0, 0.07) 0px 4px 8px, rgba(0, 0, 0, 0.07) 0px 8px 16px, rgba(0, 0, 0, 0.07) 0px 16px 32px, rgba(0, 0, 0, 0.07) 0px 32px 64px; transition: background-color 0.3s, color 0.3s; border-radius: 8px">
                                <div class="card-body">
                                    <h6 style="font-size:12px" class="mb-1">@post.PostUsuarioNombre ▪ @post.PostFechaPublicacion.ToShortDateString()</h6>
                                    <h5 class="card-title mb-0">@post.PostTitulo</h5>
                                    <p class="card-text mb-1" style="font-size:13px;">@Truncate(post.PostContenido, 60)</p>
                                </div>
                            </div>
                        </a>
                        <style>
                            /* Estilo para el hover */
                            .text-decoration-none:hover .card {
                                background-color: black;
                                color: white;
                            }
                        </style>
                    </div>

            @*     <div class="col-6 mb-3">
                    <div class="card mb-2" style=" box-shadow: rgba(60, 64, 67, 0.3) 0px 1px 2px 0px, rgba(60, 64, 67, 0.15) 0px 1px 3px 1px;">
                        <div class="card-body">
                            <h6 style="font-size:12px" class="mb-1"> @post.PostUsuarioNombre ▪ @post.PostFechaPublicacion.ToShortDateString() </h6>
                            <h5 class="card-title mb-0">@post.PostTitulo</h5>
                            <p class="card-text mb-1" style="font-size:13px;">@Truncate(post.PostContenido, 30)</p>
                            <h6 class="" style="font-size:13px;"><i class="bi bi-eyeglasses"></i>  @Html.ActionLink("Leer más", "PostDetails", "Posts", new { id = post.PostId }, new { @class = "text-decoration-none" })</h6>
                        </div>
                    </div>
                </div> *@
            }
            </div>

        } else
        {
             <p>No hay artículos disponibles.</p>
        }

</div>
  
</div>









<script>
    function Truncate(text, length) {
        return text.length > length ? text.substring(0, length) + "..." : text;
    }

    function expandContent(postId) {
        var contentElement = document.getElementById("postContent-" + postId);
        var fullContent = /* Obtén el contenido completo del servidor o de donde lo tengas */
        contentElement.innerText = fullContent;
    }
</script>
