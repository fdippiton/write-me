@model WriteMe_MVC.Models.Usuario

@{
    ViewData["Title"] = "Iniciar Sesion";
}

<h1 class="text-center">Iniciar Sesion</h1>

<div class="row d-flex justify-content-center mt-4">
    <div class="col-md-4">
        <form asp-action="IniciarSesion" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="UsuCorreo" class="control-label"></label>
                <input asp-for="UsuCorreo" class="form-control" />
                <span asp-validation-for="UsuCorreo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="UsuContrasena" class="control-label"></label>
                <input asp-for="UsuContrasena" class="form-control" />
                <span asp-validation-for="UsuContrasena" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Iniciar sesion" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

