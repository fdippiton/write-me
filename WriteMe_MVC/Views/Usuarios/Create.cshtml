@model WriteMe_MVC.Models.Usuario

@{
    ViewData["Title"] = "Create";
}


<div class="row d-flex justify-content-center mt-5">
    <div class="col-md-4 bg-white py-5 px-2 rounded-3" >
        <h3 class="text-center" style="font-family: 'Noto Serif Balinese', serif;">WriteMe</h3>
        <h6 class="text-center" style="color:#3F3F3F">Registrate para empezar a escribir articulos</h6>
        <form asp-action="Create" class=""  >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="UsuId" class="control-label" hidden></label>
                <input asp-for="UsuId" class="form-control" hidden/>
                <span asp-validation-for="UsuId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" style="width: 75%;   margin: 0 auto">
                @* <label asp-for="UsuNombre" class="control-label"></label> *@
                <input asp-for="UsuNombre" class="form-control" style="font-size:12px;" placeholder="Nombre completo" />
                <span asp-validation-for="UsuNombre" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" style="width: 75%;   margin: 0 auto">
                @* <label asp-for="UsuCorreo" class="control-label"></label> *@
                <input asp-for="UsuCorreo" class="form-control" style="font-size:12px;" placeholder="Correo electrónico" />
                <span asp-validation-for="UsuCorreo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" style="width: 75%;   margin: 0 auto">
                @* <label asp-for="UsuContrasena" class="control-label"></label> *@
                <input asp-for="UsuContrasena" class="form-control" style="font-size:12px;" placeholder="Contraseña" type="password" />
                <span asp-validation-for="UsuContrasena" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="UsuStatus" class="control-label" hidden></label>
                <input asp-for="UsuStatus" class="form-control" value="A" hidden/>
                <span asp-validation-for="UsuStatus" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Registrarte" style="font-size:14px;" class="btn btn-primary" />
            </div>

            <div class="text-center mt-2 d-flex align-items-center justify-content-center">
                <h6 style="font-size:13px;" class="m-0">¿Tienes una cuenta?</h6>
                <a class="nav-link px-1" style="font-size:13px;" asp-area="" asp-controller="Usuarios" asp-action="IniciarSesion">Entrar</a>
            </div>
        </form>
    </div>
</div>

@* <div>
    <a asp-action="Index">Back to List</a>
</div> *@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
