@model WriteMe_MVC.Models.Post

<div class="row d-flex align-items-center bg-white py-5 rounded-2 flex-column">
    <div class="col-md-8">
<h4 class="mb-3">Editar </h4>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PostId" class="control-label" hidden></label>
                <input asp-for="PostId" class="form-control" hidden />
                <span asp-validation-for="PostId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PostTitulo" class="control-label fw-bold" style="font-size:14px;"> Titulo</label>
                <input asp-for="PostTitulo" class="form-control" style="font-size:13px;" />
                <span asp-validation-for="PostTitulo" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PostContenido" class="control-label  fw-bold" style="font-size:14px;">Contenido</label>
                @* <input asp-for="PostContenido" class="form-control" /> *@
                <textarea asp-for="PostContenido" class="form-control" rows="6" style="font-size:13px;"></textarea>
                <span asp-validation-for="PostContenido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostFechaPublicacion" class="control-label" hidden></label>
                <input asp-for="PostFechaPublicacion" class="form-control" hidden />
                <span asp-validation-for="PostFechaPublicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostUsuarioId" class="control-label" hidden></label>
                <input asp-for="PostUsuarioId" class="form-control" hidden/>
                <span asp-validation-for="PostUsuarioId" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="PostCategoria" class="control-label  fw-bold" style="font-size:14px;">Categoria</label>
                <select asp-for="PostCategoria" asp-items="ViewBag.DropDownData" class="form-control" style="font-size:13px;">
                </select>
                <span asp-validation-for="PostCategoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostStatus" class="control-label" hidden></label>
                <input asp-for="PostStatus" class="form-control" hidden />
                <span asp-validation-for="PostStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" style="font-size:13px;" />
            </div>
          
        </form>
    </div>

    <div class="col-8 mt-4">
        <a href="@Url.Action("PostDetails", "Posts", new { id = Model.PostId })" class="">
            <i class="bi bi-arrow-left-circle-fill text-dark" style="font-size: 1.5rem;"></i> 
        </a>
    </div>
</div>

